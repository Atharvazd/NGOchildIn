            <!-- register -->
            <div class="modal fade" id="DonationForm" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content col-md-12">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Donation</h4>
                  </div>
                  <div class="modal-body">
                    <div class="row">
                      <form class="form-horizontal" action="/registerDonation" method="POST">
                        <fieldset>

                          <!-- Text input-->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="form_name">Supported Child</label>
                            <div class="col-md-8">
                              <select id="form_supported_child" name="supported_child" class="form-control" required="">
                                  {#childList}
                                      <option value={id}>{name}</option>
                                  {/childList}
                              </select>
                            </div>
                          </div>

                          <!-- Text input-->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="form_name">Purpose</label>
                            <div class="col-md-8">
                              <input id="form_purpose" name="purpose" type="text" placeholder="Enter your purpose" class="form-control input-md" maxlength="1000" >

                            </div>
                          </div>

                          <!-- Text input-->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="form_name">Gender</label>
                            <div class="col-md-8">
                              <input id="form_gender" name="gender" type="text" placeholder="Enter your gender" class="form-control input-md" required="" >

                            </div>
                          </div>

