                  </div>
                  <div class="modal-body">

                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                  </div>
                  <div class="modal-footer ">
                    <button type="button" class="btn btn-success" id="deleteMe" ><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                  </div>
                </div>
                <!-- /.modal-content -->
              </div>
              <!-- /.modal-dialog -->
            </div>

            <!-- register -->
            <div class="modal fade" id="registerChildForm" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content col-md-12">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Register Child</h4>
                  </div>
                  <div class="modal-body">
                    <div class="row">
                      <form class="form-horizontal" action="/registerChild" method="post">
                        <fieldset>

                          <!-- Text input-->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="form_name">Child Name</label>
                            <div class="col-md-8">
                              <input id="form_name" name="name" type="text" placeholder="Enter your name" class="form-control input-md" required="" >

                            </div>
                          </div>

                          <!-- Text input-->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="form_dob">Child DOB</label>
                            <div class="col-md-8">
                              <input id="form_dob" name="dob" type="date" placeholder="Enter Child DOB (mm/dd/yyyy)" class="form-control input-md" >

                            </div>
                          </div>

                          <!-- Text input-->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="form_additional_info">Additional info about child</label>
                            <div class="col-md-8">
                              <textarea id="form_additional_info" name="additional_info" placeholder="Enter info" class="form-control input-md" >
                              </textarea>
                            </div>
                          </div>

                          <!-- Button -->
                          <div class="form-group">
                            <label class="col-md-4 control-label" for="register"></label>
